<Page
    x:Class="TaskProjectWPF.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskProjectWPF.Pages"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Title="DashboardPage">
    <Page.Resources>
        <Style
            TargetType="Viewbox">
            <Setter
                Property="Margin"
                Value="10" />

            <Style.Resources>
                <Style
                    TargetType="Border">
                    <Setter
                        Property="CornerRadius"
                        Value="10" />
                </Style>
            </Style.Resources>
        </Style>
        <Style
            TargetType="Border"
            x:Key="Border">
            <Setter
                Property="Margin"
                Value="20" />
            <Setter
                Property="BorderBrush"
                Value="Gray" />
            <Setter
                Property="BorderThickness"
                Value="3" />
            <Setter
                Property="CornerRadius"
                Value="10" />
        </Style>
    </Page.Resources>
    <ScrollViewer>


        <WrapPanel
            AllowDrop="True"
            x:Name="Content">


            <Border
                x:Name="B121"
                Tag="0"
                Style="{StaticResource Border}"
                MouseDown="Border_MouseDown"
                MouseUp="Border_MouseUp"
                MaxWidth="300"
                MaxHeight="300">
                <Viewbox>
                    <StackPanel>
                        <TextBlock
                            Text="{Binding CountFinishTask}"
                            HorizontalAlignment="Center"
                            FontSize="32"/>
                        <TextBlock 
                                   Text="Задач выполнено за сегодня"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                </Viewbox>
            </Border>

            <Border
                Tag="1"
                MaxWidth="300"
                MaxHeight="300"
                x:Name="BExportData"
                MouseDown="Border_MouseDown"
                MouseUp="Border_MouseUp"
                Style="{StaticResource Border}"
                Grid.Row="1">
                <Viewbox>
                    <TextBlock
                        Text="Экспорт данных"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />
                </Viewbox>
            </Border>

            <Border
                Tag="2"
                MaxHeight="400"
                MaxWidth="300"
                MouseUp="Border_MouseUp"
                x:Name="BTopEmpoyee"
                MouseDown="Border_MouseDown"
                Style="{StaticResource Border}"
                Grid.Column="1">
                <Viewbox>
                    <DataGrid
                        Width="200"
                        x:Name="DGTopEmployee"
                        AutoGenerateColumns="False"
                        IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding NumberTop}" />
                            <DataGridTextColumn
                                Header="ФИО"
                                Width="*"
                                Binding="{Binding FullName}" />
                            <DataGridTextColumn
                                Header="Кол-во"
                                Binding="{Binding CountTask}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Viewbox>
            </Border>
            <Border
                Tag="3"
                MaxWidth="300"
                MaxHeight="300"
                MouseUp="Border_MouseUp"
                x:Name="BDaigram"
                MouseDown="Border_MouseDown"
                Style="{StaticResource Border}"
                Grid.Column="2">
                <Viewbox>
                    <StackPanel>
                        <TextBlock
                            Text="Список задач" />
                        <lvc:PieChart
                         
                            Series="{Binding SeriesCollection}">
                        </lvc:PieChart>
                    </StackPanel>
                    
                </Viewbox>
            </Border>
            <Border
                Tag="4"
                MouseUp="Border_MouseUp"
                x:Name="BBigDiagram"
                MouseDown="Border_MouseDown"
                Style="{StaticResource Border}"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2">
                <Viewbox>
                    <lvc:CartesianChart
                        
                        Width="1000"
                        Height="200">
                        <lvc:CartesianChart.Series>
                            <lvc:HeatSeries
                                Values="{Binding Values}">
                                <lvc:HeatSeries.GradientStopCollection>
                                    <GradientStop
                                        Offset="0"
                                        Color="#fafffb"></GradientStop>
                                    <GradientStop
                                        Offset=".25"
                                        Color="#c1f6c5"></GradientStop>
                                    <GradientStop
                                        Offset=".50"
                                        Color="#8af293"></GradientStop>
                                    <GradientStop
                                        Offset=".75"
                                        Color="#63ea6f"></GradientStop>
                                    <GradientStop
                                        Offset="1"
                                        Color="#14ab21"></GradientStop>
                                </lvc:HeatSeries.GradientStopCollection>

                            </lvc:HeatSeries>

                        </lvc:CartesianChart.Series>

                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis
                                Labels="{Binding Months}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator></lvc:Separator>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis
                                Labels="{Binding Days}"></lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Viewbox>
            </Border>


        </WrapPanel>
    </ScrollViewer>

</Page>
